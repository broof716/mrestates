<!DOCTYPE html>
<html>
  <head>
    <title>Mrestates</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <nav class="navbar navbar-toggleable-md navbar-light"style="background-color: #6E4A56">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'MR Estate Sale', root_path,class: 'navbar-brand' %>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item">
            <%= link_to 'Online Marketplace', marketplaces_path, class: 'nav-link' %>  
          </li>
          <li class="nav-item">
            <%= link_to 'Estate Sales & Reviews', estates_path, class: 'nav-link' %>  
          </li>
        </ul>
         <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'My Profile', user_path(current_user), class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
  <%= yield %>

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
      <b>MR Estate Sales</b>
      <br>
      <%= link_to 'Add Sales Photos', new_operator_marketplace_path %>
      <br />
      <%= link_to 'Add New Location', new_operator_estate_path %>
    </div>
      <div class="col-12 col-sm-3">
        <b>About</b>
        <br />
        <%= link_to 'Team', '#' %>
        <br />
        <%= link_to 'Careers', '#' %>
        <br />
        
      </div>
      <div class="col-12 col-sm-3">
        <b>Contact</b>
        <br />
        Michael J. Popovice & Ray A. Wortinger
        <br />
        sales@mrestatesale.com
        <br />
        520-825-9500
      </div>
      <div class="col-12 col-sm-3 social">
        <b>Social</b>
        <br />
        <br />
        <%= link_to 'http://github.com/broof716' do %>
          <span class="fa fa-github-square fa-2x social-button"></span>
        <% end %>
        <span class="fa fa-facebook-square fa-2x social-button"></span>
        <span class="fa fa-twitter-square fa-2x social-button"></span>
      </div>
    </div>
  </div>
</div>
  </body>
</html>

