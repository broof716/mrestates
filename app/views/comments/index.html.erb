<h1>Customer Reviews</h1>

<div class="booyah-box col-10 offset-1">
<h2>Comments</h2>

<% @comments.each do |comment| %>
  <div>
    <blockquote>
      <b><%= comment.rating %></b> -
        <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>